<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>f79226</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>f79226</color>
		</image>

		<text name="system_description" extra="true">
			<text>TurboGrafx-16, fully titled as TurboGrafx-16 Entertainment SuperSystem and known in Japan as the PC Engine, is a video game console developed by Hudson Soft and NEC, released in Japan on October 30, 1987, and in North America on August 29, 1989.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>f7922688</selectorColor>
		</textlist>

	</view>
	
</theme>